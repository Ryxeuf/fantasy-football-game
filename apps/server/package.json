{
  "name": "@bb/server",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "dev:nowatch": "tsx src/index.ts",
    "prisma:generate:sqlite": "TEST_DATABASE_URL='file:dev.db?connection_limit=1&socket_timeout=5' prisma generate --schema prisma/sqlite/schema.prisma",
    "prisma:push:sqlite": "TEST_DATABASE_URL='file:dev.db?connection_limit=1&socket_timeout=5' prisma db push --schema prisma/sqlite/schema.prisma",
    "db:reset:sqlite": "rm -f dev.db && TEST_DATABASE_URL='file:dev.db?connection_limit=1&socket_timeout=5' prisma db push --schema prisma/sqlite/schema.prisma",
    "start": "node dist/index.js",
    "lint": "eslint . || true",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "prisma:generate": "prisma generate",
    "prisma:push": "prisma db push",
    "prisma:migrate": "prisma migrate dev --name init",
    "db:seed": "tsx src/seed.ts",
    "list:users": "tsx src/list-users.ts"
  },
  "dependencies": {
    "@prisma/client": "^6.16.2",
    "bcryptjs": "^3.0.2",
    "boardgame.io": "^0.50.2",
    "body-parser": "^2.2.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^4.19.2",
    "jsonwebtoken": "^9.0.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "prisma": "^6.16.2",
    "tsx": "^4.16.2",
    "typescript": "^5.5.4"
  }
}
